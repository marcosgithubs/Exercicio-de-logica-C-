    static void OlharOCodigo()
    {
        Local("Codigo", "");
        string filePath = "C:\\Users\\BSBIA04-EST61\\source\\repos\\Exercicio\\Program.cs";
        try
        {
            using (StreamReader reader = new StreamReader(filePath))
            {
                string line;
                while ((line = reader.ReadLine()) != null)
                {
                    Console.WriteLine(line);
                }

            }
        }
        catch (Exception e)
        {
            Console.WriteLine("Ocorreu um erro: " + e.Message);
        }
    }
    static void TrianguloValido(bool jaEntrou)
    {
        if (jaEntrou == false)
            Console.WriteLine("Digite os tres lados de um triangulo");

        Console.WriteLine("Digite o ponto A do triangulo:");
        int ladoA = int.Parse(Console.ReadLine());
        if (ladoA < 0)
        {
            Console.WriteLine("Valor invalido tente novamente.");
            Thread.Sleep(500);
            TrianguloValido(true);

        }
        Console.WriteLine("Digite o ponto B do triangulo:");

        int ladoB = int.Parse(Console.ReadLine());
        if (ladoB < 0)
        {
            Console.WriteLine("Valor invalido tente novamente.");
            Thread.Sleep(500);
            TrianguloValido(true);

        }
        Console.WriteLine("Digite o ponto C do triangulo (precisa ser maior que o ponto A e o ponto B juntos):");
        int ladoC = int.Parse(Console.ReadLine());
        if (ladoC < ladoA + ladoB)
        {
            Console.WriteLine("Valor invalido tente novamente.");
            Thread.Sleep(500);
            TrianguloValido(true);

        }
        string tipoDeTriangulo = "";
        if (ladoA == ladoB & ladoB == ladoC)
            tipoDeTriangulo = "Equilátero";
        else if (ladoA == ladoB & ladoB == ladoC & ladoA == ladoC)
            tipoDeTriangulo = "Isósceles";
        else
            tipoDeTriangulo = "Escaleno";
        Local("Exercícios da estrutura if-else", $"Questão - 10");
        Console.WriteLine($"O valor do lado A é: {ladoA}, O valor do lado B é: {ladoB}, O valor do lado C é: {ladoC}.");
        Console.WriteLine($"O tipo desse triangulo é: {tipoDeTriangulo}");
    }

    static void Local(string exercicio, string questão)
    {
        Console.Clear();
        if (exercicio != "" & questão != "")
        {
            Console.WriteLine($"""
            {exercicio}
                {questão}
            """);
        }

    }
