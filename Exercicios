                Console.WriteLine($"A nota que ele precisa ter para passar é 7.");
                int quantidadeDeNotas = 4;
                int quantidadePraPassar = 7;
                int mediaFinal = (Nota1 + Nota2 + Nota3 + Nota4) / quantidadeDeNotas;
                Console.WriteLine($"a nota 1 do aluno {nomeDoAluno}: {Nota1}, nota 2: {Nota2}, nota 3: {Nota3}, nota 4: {Nota4}.");
                Console.WriteLine($"A media das notas do aluno {nomeDoAluno} é {mediaFinal}.");
                if (mediaFinal >= quantidadePraPassar)
                {
                    Console.WriteLine($"O aluno {nomeDoAluno} passou.");
                }
                else
                {
                    Console.WriteLine($"O aluno {nomeDoAluno} reprovou.");
