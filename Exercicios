using static System.Runtime.InteropServices.JavaScript.JSType;

class Program
{
    static void Main()
    {
        Local("", "");
        Console.WriteLine("""
        Selecione de 1~4 das opções abaixo:
            1 - Exercícios de lógica
            2 - Exercícios da estrutura if-else
            3 - Exercícios da estrutura switch-case
            4 - Exercícios de estruturas de repetição
        """);

        int exercicio = int.Parse(Console.ReadLine());

        switch (exercicio)
        {
            case 1:
                Local("Exercícios de lógica", "Digite de 1~10 para ver o conteúdo de uma questão");
                int questao = int.Parse(Console.ReadLine());
                Logica(questao);
                break;

            case 2:
                Local("Exercícios da estrutura if-else", "Digite de 1~10 para ver o conteúdo de uma questão");
                int questao2 = int.Parse(Console.ReadLine());
                IfElse(questao2);
                break;

            case 3:
                Local("Exercícios da estrutura switch-case", "Digite um número de 1~2 para ver a questão correspondente");
                int questao3 = int.Parse(Console.ReadLine());
                SwitchCaseMain(questao3);
                break;

            case 4:
                Local("Exercícios de estruturas de repetição", "Digite de 1~3 para ver o conteúdo de uma questão");
                int questao4 = int.Parse(Console.ReadLine());
                Repeticao(questao4);
                break;

            default:
                Console.WriteLine("Opção inválida.");
                Console.WriteLine("Espere para voltar pro início.");
                Thread.Sleep(1000);
                Main();
                break;
        }
    }

    // Função para exibir o título e questão atual
    static void Local(string exercicio, string questao)
    {
        Console.Clear();
        if (!string.IsNullOrEmpty(exercicio) && !string.IsNullOrEmpty(questao))
        {
            Console.WriteLine($"""
            {exercicio}
                {questao}
            """);
        }
    }

    // Exercícios de lógica
    static void Logica(int questao)
    {
        switch (questao)
        {
            case 1:
                Local("Exercícios de lógica", "Questão - 1");
                Console.WriteLine("Digite um número:");
                int numero = int.Parse(Console.ReadLine());
                Console.Clear();
                Local("Exercícios de lógica", "Questão - 1");
                Console.WriteLine($"O antecessor de {numero} é: {numero - 1} e o sucessor de {numero} é: {numero + 1}");
                ReturnToMenu();
                break;

            case 2:
                Local("Exercícios de lógica", "Questão - 2");
                Console.WriteLine("Digite o quanto você ganha de salário:");
                double salarioMinimo = 1293.20;
                int salarioUser = int.Parse(Console.ReadLine());
                Console.Clear();
                Local("Exercícios de lógica", "Questão - 2");
                double vezesSalario = salarioUser / salarioMinimo;
                Console.WriteLine($"Você recebe {Math.Round(vezesSalario)} vezes o salário mínimo normal");
                ReturnToMenu();
                break;

            case 3:
                Local("Exercícios de lógica", "Questão - 3");
                Console.WriteLine("Digite um valor para ser reajustado em 5%:");
                int valor = int.Parse(Console.ReadLine());
                Console.Clear();
                Local("Exercícios de lógica", "Questão - 3");
                Console.WriteLine($"Aqui está o valor com reajuste: {valor + 5 % valor}");
                ReturnToMenu();
                break;

            case 4:
                Local("Exercícios de lógica", "Questão - 4");
                Console.WriteLine("Digite um valor:");
                int a = int.Parse(Console.ReadLine());
                Local("Exercícios de lógica", "Questão - 4");
                Console.WriteLine("Digite outro valor:");
                int b = int.Parse(Console.ReadLine());
                Local("Exercícios de lógica", "Questão - 4");
                Console.WriteLine($"Valor antes: A = {a} e B = {b}");
                int temp = a;
                a = b;
                b = temp;
                Console.WriteLine($"Valor depois: A = {a} e B = {b}");
                ReturnToMenu();
                break;

            // ... [Continue os outros cases aqui, siga o mesmo padrão de organização]

            default:
                Console.WriteLine("Não é uma questão válida.");
                ReturnToMenu();
                break;
        }
    }

    // Exercícios da estrutura if-else
    static void IfElse(int questao)
    {
        switch (questao)
        {
            case 1:
                Local("Exercícios da estrutura if-else", $"Questão - {questao}");
                Console.WriteLine("Digite um número:");
                int a = int.Parse(Console.ReadLine());
                Local("Exercícios da estrutura if-else", $"Questão - {questao}");
                Console.WriteLine("Digite outro número:");
                int b = int.Parse(Console.ReadLine());
                Local("Exercícios da estrutura if-else", $"Questão - {questao}");
                Console.WriteLine("Digite mais um número:");
                int c = int.Parse(Console.ReadLine());
                Local("Exercícios da estrutura if-else", $"Questão - {questao}");
                int soma = a + b;
                if (soma > c)
                    Console.WriteLine($"{a} e {b} juntos são maiores que {c}");
                else
                    Console.WriteLine($"{a} e {b} juntos não são maiores que {c}");
                ReturnToMenu();
                break;

            // ... [Continue os outros cases aqui, use o mesmo padrão de organização]

            default:
                Console.WriteLine("Não é uma questão válida.");
                ReturnToMenu();
                break;
        }
    }

    // Exercícios da estrutura switch-case
    static void SwitchCaseMain(int questao)
    {
        if (questao == 1)
        {
            Console.WriteLine("Escolha um preço:");
            int preco = int.Parse(Console.ReadLine());

            Console.WriteLine("""
            Escolha uma opção de pagamento abaixo 1~4:
                1 - À Vista em Dinheiro ou Pix, recebe 15% de desconto
                2 - À Vista no cartão de crédito, recebe 10% de desconto
                3 - Parcelado no cartão em duas vezes, preço normal do produto sem juros
                4 - Parcelado no cartão em três vezes ou mais, preço normal do produto mais juros de 10%
            """);

            int opcaoPagamento = int.Parse(Console.ReadLine());
            SwitchCase(opcaoPagamento, preco);
        }
        else if (questao == 2)
        {
            Console.WriteLine("""
            *CALCULADORA*
            Digite a operação que você quer fazer 1~7
                1 - Soma
                2 - Subtração
                3 - Multiplicação
                4 - Divisão
                5 - Resto da divisão 
                6 - Potenciação
                7 - Radiciação
            """);

            int operacao = int.Parse(Console.ReadLine());

            Console.WriteLine("Digite o primeiro número da equação:");
            double valor1 = double.Parse(Console.ReadLine());

            Console.WriteLine("Digite o segundo número da equação:");
            double valor2 = double.Parse(Console.ReadLine());

            Calculadora(operacao, valor1, valor2);
        }
        else
        {
            Console.WriteLine("Não é uma questão válida.");
        }
    }

    static void SwitchCase(int opcao, int valor)
    {
        Local("Exercícios da estrutura switch-case", "Questão 1");

        switch (opcao)
        {
            case 1:
                Console.WriteLine($"Você vai pagar à vista com pix ou dinheiro. O valor ficou: R${valor - ((valor * 15) / 100)} (15% de desconto)");
                break;
            case 2:
                Console.WriteLine($"Você vai pagar à vista com cartão de crédito. O valor ficou: R${valor - ((valor * 10) / 100)} (10% de desconto)");
                break;
            case 3:
                Console.WriteLine($"Você vai pagar com cartão. O valor ficou: R${valor} (sem desconto)");
                break;
            case 4:
                Console.WriteLine($"Você vai pagar com pix ou dinheiro. O valor ficou: R${valor + ((valor * 10) / 100)} (10% de juros)");
                break;
            default:
                Console.WriteLine("Não é uma opção válida");
                break;
        }
    }

    static void Calculadora(int opcao, double valor1, double valor2)
    {
        switch (opcao)
        {
            case 1:
                Console.WriteLine($"{valor1} + {valor2} = {valor1 + valor2}");
                break;
            case 2:
                Console.WriteLine($"{valor1} - {valor2} = {valor1 - valor2}");
                break;
            case 3:
                Console.WriteLine($"{valor1} * {valor2} = {valor1 * valor2}");
                break;
            case 4:
                Console.WriteLine($"{valor1} / {valor2} = {valor1 / valor2}");
                break;
            case 5:
                Console.WriteLine($"{valor1} % {valor2} = {valor1 % valor2}");
                break;
            case 6:
                Console.WriteLine($"{valor1} ^ {valor2} = {Math.Pow(valor1, valor2)}");
                break;
            case 7:
                double raiz = Math.Pow(valor1, 1.0 / valor2);
                Console.WriteLine($"Raiz de {valor1} (índice {valor2}) = {raiz}");
                break;
            default:
                Console.WriteLine("Operação inválida");
                break;
        }
    }

    // Exercícios de estruturas de repetição
    static void Repeticao(int questao)
    {
        switch (questao)
        {
            case 1:
                Local("Exercícios de estruturas de repetição", $"Questão - {questao}");
                Console.WriteLine("Quer prosseguir com uma simulação default? (Y/N):");
                string resposta = Console.ReadLine();

                if (resposta.ToUpper() == "Y")
                {
                    SimulacaoControlada();
                }
                else if (resposta.ToUpper() == "N")
                {
                    SimulacaoCustomizada();
                }
                ReturnToMenu();
                break;

            // ... [Continue os outros cases aqui, use o mesmo padrão de organização]

            default:
                Console.WriteLine("Não é uma questão válida.");
                ReturnToMenu();
                break;
        }
    }

    static void SimulacaoControlada()
    {
        double saraAltura = 1.50;
        double franciscoAltura = 1.30;

        Local("Exercícios de estruturas de repetição", "Questão - 1");
        Console.WriteLine("Sara tem 1,50m e cresce 2 centímetros por ano, enquanto Francisco tem 1,10m e cresce 3 centímetros por ano.");

        int anos = 0;
        while (saraAltura > franciscoAltura - 0.000000000000001)
        {
            anos++;
            saraAltura += 0.02;
            franciscoAltura += 0.03;
        }

        Console.WriteLine($"Precisou de {anos} anos para Francisco ser maior que Sara");
        Console.WriteLine($"Francisco tem {franciscoAltura}m e Sara tem {saraAltura}m.");
    }

    static void SimulacaoCustomizada()
    {
        Local("Exercícios de estruturas de repetição", "Questão - 1");

        Console.WriteLine("Digite a altura de Sara ex: 1,50.");
        double saraAltura = double.Parse(Console.ReadLine());

        Console.WriteLine("Digite a altura de Francisco ex: 1,30.");
        double franciscoAltura = double.Parse(Console.ReadLine());

        Console.WriteLine("Digite o crescimento que Sara tem por ano ex: 0,02.");
        double saraCrescimento = double.Parse(Console.ReadLine());

        Console.WriteLine("Digite o crescimento que Francisco tem por ano ex: 0,03.");
        double franciscoCrescimento = double.Parse(Console.ReadLine());

        int anos = 0;
        while (saraAltura > franciscoAltura - 0.000000000000001)
        {
            anos++;
            saraAltura += saraCrescimento;
            franciscoAltura += franciscoCrescimento;
        }

        Console.WriteLine($"Precisou de {anos} anos para Francisco ser maior que Sara");
        Console.WriteLine($"Francisco tem {franciscoAltura}m e Sara tem {saraAltura}m.");
    }

    // Função auxiliar para retornar ao menu principal
    static void ReturnToMenu()
    {
        Console.WriteLine("Pressione Enter para voltar...");
        Console.ReadLine();
        Main();
    }

    // ... [Continue organizando os outros métodos conforme necessário]
}
